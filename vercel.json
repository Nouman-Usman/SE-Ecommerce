{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "ecommerce-frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "ecommerce-frontend/build",
          "buildCommand": "npm run build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/ecommerce-frontend/$1"
      }
    ]
  }